{% extends "@layouts/default--one-column.twig" %}
{% block main %}
<!--    <h1>Startseite</h1>--> {# @todo unsichtbare Ã¼berschrift #}

    <div class="layout">
        <div class="layout__item background--image background--expanded" style="background-image: url('../../../Images/examples/hero-startpage.jpg');">
            {% include '@components/employee-welcome-message/employee-welcome-message.twig' %}
            {% include '@components/employee-finder/employee-finder.twig' %}
        </div>
        <div class="layout__item fx--expanded">
            <div class="foo--100">
                <div class="bar bar--main-hero">
                    <div class="bar__header">
                        <!-- main news: carousel -->
                        {% embed '@components/carousel/carousel.twig' with {
                            pagination: 'right',
                            cols: {
                                xs: 1,
                                sm: 1,
                                md: 1,
                                lg: 1
                            }
                        } %}
                            {% block content %}
                                {% for item in prototype.carousel.service.items %}
                                    <div class="swiper-slide">
                                        <!-- cards -->
                                        {% for item in prototype.carousel.mainNews.items %}
                                            {% include '@components/card/card.twig' with {
                                                title: item.title,
                                                subTitle: item.subTitle,
                                                text: item.text,
                                                type: item.type,
                                                link: {
                                                    href: item.link.url,
                                                    text: item.link.text
                                                },
                                                image: {
                                                    src: item.image.src,
                                                    position: item.image.position,
                                                    patternColor: item.image.patternColor
                                                }
                                            } only %}
                                        {% endfor %}
                                    </div>
                                {% endfor %}
                            {% endblock content %}
                        {% endembed %}
                    </div>

                    <div class="bar__footer">
                        <!-- more news -->
                        {% embed '@components/content-wrapper/content-wrapper.twig' with {
                            title: prototype.moreNews.title,
                            headerSize: prototype.moreNews.headerSize,
                            pattern: {
                                visible: prototype.moreNews.titleWithPattern
                            },
                            link: {
                                url: prototype.moreNews.link.url,
                                text: prototype.moreNews.link.text
                            }
                        } %}
                            {% block content %}
                                <!-- carousel -->
                                {% embed '@components/carousel/carousel.twig' with {
                                    cols: {
                                        xs: 1,
                                        sm: 1,
                                        md: 2,
                                        lg: 2
                                    }
                                } %}
                                    {% block content %}
                                        <!-- cards -->
                                        {% for item in prototype.moreNews.items %}
                                            {% include '@components/card/card.twig' with {
                                                title: item.title,
                                                subTitle: item.subTitle,
                                                text: item.text,
                                                type: item.type,
                                                link: {
                                                    href: item.link.url
                                                },
                                                image: {
                                                    src: item.image.src,
                                                    color: item.image.color
                                                }
                                            } only %}
                                        {% endfor %}
                                    {% endblock content %}
                                {% endembed %}
                            {% endblock content %}
                        {% endembed %}

                        <!-- short messages -->
                        {% embed '@components/content-wrapper/content-wrapper.twig' with {
                            title: prototype.shortMessages.title,
                            headerSize: prototype.shortMessages.headerSize,
                            pattern: {
                                visible: prototype.shortMessages.titleWithPattern
                            },
                            link: {
                                url: prototype.shortMessages.link.url,
                                text: prototype.shortMessages.link.text
                            }
                        } %}
                            {% block content %}
                                <!-- cards -->
                                {% for item in prototype.shortMessages.items %}
                                    {% include '@components/card/card.twig' with {
                                        title: item.title,
                                        subTitle: item.subTitle,
                                        type: item.type,
                                        link: {
                                            href: item.link.url
                                        },
                                    } only %}
                                {% endfor %}
                            {% endblock content %}
                        {% endembed %}
                    </div>
                </div>
            </div>
        </div>
        <div class="layout__item fx--expanded background--cyan background--expanded">
            <div class="foo--100">
                <!-- service -->
                {% embed '@components/content-wrapper/content-wrapper.twig' with {
                    title: prototype.carousel.service.title,
                    link: {
                        url: prototype.carousel.service.link.url,
