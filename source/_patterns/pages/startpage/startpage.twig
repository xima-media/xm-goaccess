                        {% embed '@components/carousel/carousel.twig' with {
                            cardsWithPattern: prototype.carousel.service.cardsWithPattern
                        } %}
                            {% block content %}
                                <!-- cards -->
                                {% for item in prototype.carousel.service.items %}
                                    <div class="swiper-slide">
                                        {% include '@components/card/card.twig' with {
                                            title: item.title,
                                            text: item.text,
                                            type: item.type,
                                            link: {
                                                href: item.link.url
                                            }
                                        } only %}
                                    </div>
                                {% endfor %}
                            {% endblock content %}
                        {% endembed %}
                    {% endblock content %}
                {% endembed %}

                <!-- tools -->
                {% embed '@components/content-wrapper/content-wrapper.twig' with {
