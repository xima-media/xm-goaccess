                                            }
                                        } only %}
                                    </div>
                                {% endfor %}
                            {% endblock content %}
                        {% endembed %}
                    {% endblock content %}
                {% endembed %}
            </div>
        </div>
        <div class="layout__item fx--expanded">
            <div class="foo--100">
                <div class="bar">
                    <!-- events -->
                    {% embed '@components/content-wrapper/content-wrapper.twig' with {
