        <div class="layout__item">
            <div class="foo--50-50">
                <!-- social feed: twitter -->
                {% embed '@components/social-feed/social-feed.twig' with {
                    title: 'DKFZ auf Twitter',
                    icon: 'twitter'
                } %}
                    {% block content %}
                        <a class="twitter-timeline" href="https://twitter.com/DKFZ?ref_src=twsrc%5Etfw">Tweets by DKFZ</a>
                        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
