{% extends "@layouts/default--one-column.twig" %}
{% block main %}
    {# hero #}
    {% embed '@components/hero/hero.twig' with { title: 'Betriebsärztlicher Dienst'} %}
        {% block content %}
            <button class="button button--primary">
                {% include '@components/icon/icon.twig' with { icon: 'bookmark-add' } %}
                Seite merken
            </button>
        {% endblock content %}
    {% endembed %}


    <div class="spacing--block">
        {# Infobox #}
        {% for info in prototype.infoBox %}
            {% include '@components/infobox/infobox.twig' with {
                color: info.color,
                border: info.border,
                title: info.title,
                text: info.text,
                links: info.links
            } only %}
        {% endfor %}
    </div>

    <div class="spacing--block">
        {# Ansprechpartner #}
        {% include '@components/contact/contact--image.twig' %}
    </div>

    <div class="spacing--block">
    {#Bild-Text-Elemente#}
    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: prototype.pictureText.title,
        titleSize: prototype.pictureText.titleSize,

    } %}
         {% block content %}
             <div class="content-wrapper__picture">
                 {% for item in prototype.pictureText.items %}
                     <div class="content-wrapper__picture-position-{{ item.imagePosition|default('left') }}"
                         {% include '@components/image/image.twig' with {
                             src: item.image.src,
                             alt: item.image.alt,
                             position: item.image.position,
                             orientation: item.image.orientation,
                             size: item.image.size,
                             patternColor: item.image.patternColor,
                             copyright: item.image.copyright,
                             caption: item.image.caption
                         } only %}

                         <div class="content-wrapper__picture --content">
                             <h3 class="--title">{{ item.title }}</h3>
                             <p class="--text">
                                 {{ item.text }}
                             </p>
                         </div>
                     </div>
                 {% endfor %}
             </div>

         {% endblock content %}
    {% endembed %}


    {% for item in prototype.pictureSize %}
        {% include '@components/card/card.twig' with {
            title: item.title,
            text: item.text,
            type: item.type,
            image: {
                src: item.image.src,
                alt: item.image.alt,
                position: item.image.position,
                orientation: item.image.orientation,
                size: item.image.size,
                patternColor: item.image.patternColor,
                copyright: item.image.copyright,
                caption: item.image.caption
            }
        } only %}
    {% endfor %}
    </div>

    <div class="spacing--block">
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title: prototype.carousel.pictureText.title
        } %}
            {% block content %}
                <!-- carousel -->
                {% embed '@components/carousel/carousel.twig' with {
                    cols: {
                        xs: 1,
                        sm: 1,
                        md: 1,
                        lg: 1
                    },
                    paginationStyle: {
                        xs: 'fraction',
                        sm: 'fraction',
                        md: 'fraction',
                        lg: 'fraction',
                    }
                } %}
                    {% block content %}
                        <!-- cards -->
                        {% for i in 0..6 %}
                            {% for item in prototype.carousel.pictureText.items %}
                                <div class="swiper-slide swiper-slide--height">
                                        {% include '@components/card/card.twig' with {
                                            image: {
                                                src: item.image.src,
                                                alt: item.image.alt,
                                                copyright: item.image.copyright,
                                                caption: item.image.caption
                                            }
                                        } only %}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock content %}
                {% endembed %}
            {% endblock content %}
        {% endembed %}
    </div>

    <div class="spacing--block">
        {# video player #}
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title: "Video",
            titleSize: prototype.pictureText.titleSize,

        } %}
            {% block content %}
                {% include '@components/video-player/video-player.twig' %}
            {% endblock content %}
        {% endembed %}
    </div>

    <div class="spacing--block">
        {# Formatierungsmöglichkeiten #}
        {% include '@components/text/text.twig' %}
    </div>

    <div class="spacing--block">
        {# Tabelle #}
        {% include '@components/table/table.twig' %}
    </div>

    <div class="spacing--block">
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title: "Leitfaden für Veranstaltungsorganisatoren",
            titleSize: prototype.pictureText.titleSize,

        } %}
        {% block content %}
            {# Akkordeon #}
            {% include '@components/accordion/accordion.twig' %}
        {% endblock content %}
        {% endembed %}
    </div>

    <div class="spacing--block">
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title: "Tabelement",
            titleSize: prototype.pictureText.titleSize,

        } %}
        {% block content %}
            {# Tabelement #}
            {% include '@components/tabs/tabs.twig' %}
        {% endblock content %}
        {% endembed %}
    </div>


    <div class="layout__item fx--expanded">
        <div class="foo--100">
            <div class="bar">
                <!-- Folgende Themen könnten Sie auch interessieren -->
                {% embed '@components/content-wrapper/content-wrapper.twig' with {
                    title: prototype.topics.title,
                    pattern: {
                        visible: prototype.topics.titleWithPattern
                    }
                } %}
                    {% block content %}
                        <div class="content-wrapper__horizontal">
                        {% for item in prototype.topics.items %}
                            {% include '@components/card/card.twig' with {
                                title: item.title,
                                subTitle: item.subTitle,
                                link: {
                                    href: item.link.url
                                },
                                image: {
                                    src: item.image.src,
                                    color: item.image.color,
                                    size: item.image.size
                                }
                            } only %}
                        {% endfor %}
                        </div>
                    {% endblock content %}
                {% endembed %}
            </div>
        </div>
    </div>


{% endblock main %}


