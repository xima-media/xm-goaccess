<!-- Component Start: contact -->

{#<div class="contact contact--background {{ background ? 'contact--background-' ~ background : '' }}">#}
<div class="contact {{ background ? 'contact--background-' ~ background : '' }}">
    <h5 class="contact--title">{{ title }}</h5>
    {% if room %}
        <p>{{ room }}</p>
    {% endif %}
    <ul class="contact__items">
        <li class="contact__item contact--subtitle">
            {{ subTitle }}
        </li>
        {% for item in items %}
            <li class="contact__item">
                {% include '@components/icon/icon.twig' with {icon: item.type} %}
                <a class="contact__link" href="{{ item.type == 'mail' ? 'mailto' : 'tel' }}:{{ item.url }}">{{ item.text }}</a>
            </li>
        {% endfor %}
    </ul>

    {% if image %}
        <div class="contact--person">
            {% if subTitleImage %}
                <h5 class="contact--subtitle">{{ subTitleImage }}</h5>
            {% endif %}

            <div class="contact--person-container">
                {% include '@components/card/card.twig' with {
                    image: {
                        src: image.src,
                        color: image.color,
                        size: image.size
                    }
                } only %}

                <div class="contact--information">
                    {% if link %}
                        <a href="{{ link.url }}">{{ link.text }}</a>
                    {% endif %}

                    {% if contactData %}
                        <ul class="contact__items">
                            {% for item in contactData %}
                                <li class="contact__item">
                                    {% include '@components/icon/icon.twig' with {icon: item.type} %}
                                    <a class="contact__link" href="{{ item.type == 'mail' ? 'mailto' : 'tel' }}:{{ item.url }}">{{ item.text }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

<!-- Components End: contact -->
