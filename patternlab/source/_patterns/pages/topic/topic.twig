{% extends "@layouts/default--one-column.twig" %}
{% block main %}
    {# hero #}
    {% embed '@components/hero/hero.twig' with { title: 'Betriebs√§rztlicher Dienst'} %}
        {% block main %}
            <button class="button button--primary">
                {% include '@components/icon/icon.twig' with { icon: 'bookmark-add' } %}
                Seite merken
            </button>
        {% endblock main %}
    {% endembed %}

    {#  #}
    <div>
        <h2 class="h5">zuletzt aktualisiert: 12. Dezember 2021</h2>
        <p>
            Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula
