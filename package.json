{
  "name": "xm-dkfz-net",
  "version": "1.0.0",
  "description": "Asset build for DKFZ Intranet",
  "scripts": {
    "start": "npm-run-all -p sass:watch ts:watch",
    "build": "npm-run-all -s sass:build sass:postcss ts:build",
    "sass:watch": "sass --error-css --watch --load-path=node_modules packages/xm_dkfz_net_site/Resources/Private/Scss/app.scss packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.css",
    "sass:build": "sass --no-source-map --quiet --style=compressed --load-path=node_modules packages/xm_dkfz_net_site/Resources/Private/Scss/app.scss packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.min.css",
    "sass:postcss": "postcss packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.min.css --map false --use autoprefixer -d packages/xm_dkfz_net_site/Resources/Public/Css/dist/",
    "ts:watch": "webpack --config webpack.config.js --stats-children --stats-error-details",
    "ts:build": "webpack --config webpack.prod.config.js",
    "ts:fix": "npx eslint packages/xm_dkfz_net_site/Resources/Private/TypeScript --fix"
  },
  "author": "Maik Schneider",
  "license": "proprietary",
  "dependencies": {
    "autocompleter": "^7.0.1",
    "autoprefixer": "^10.4.13",
    "bootstrap": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "sass": "^1.56.1",
    "swiper": "^8.4.5",
    "terser-webpack-plugin": "^5.3.6",
    "tippy.js": "^6.3.7",
    "tom-select": "^2.2.2",
    "ts-loader": "^9.4.1",
    "webpack-cli": "^5.0.0",
    "webpack-merge": "^5.8.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^4.9.3"
  }
}
