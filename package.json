{
  "name": "xm-dkfz-net",
  "version": "1.0.0",
  "description": "Asset build for DKFZ Intranet",
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "scripts": {
    "start": "npm-run-all -p tsc:watch sass:watch ts:watch",
    "build": "npm-run-all -s sass:build sass:postcss ts:build",
    "sass:watch": "sass --error-css --watch --load-path=node_modules packages/xm_dkfz_net_site/Resources/Private/Scss/app.scss:packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.css packages/xm_dkfz_net_site/Resources/Private/Scss/terminal.scss:packages/xm_dkfz_net_site/Resources/Public/Css/dist/terminal.css",
    "sass:build": "sass --no-source-map --quiet --style=compressed --load-path=node_modules packages/xm_dkfz_net_site/Resources/Private/Scss/app.scss:packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.min.css packages/xm_dkfz_net_site/Resources/Private/Scss/terminal.scss:packages/xm_dkfz_net_site/Resources/Public/Css/dist/terminal.min.css",
    "sass:postcss": "postcss packages/xm_dkfz_net_site/Resources/Public/Css/dist/app.min.css --map false --use autoprefixer -d packages/xm_dkfz_net_site/Resources/Public/Css/dist/",
    "ts:watch": "node ./esbuild.config.mjs --watch",
    "ts:build": "node ./esbuild.config.mjs --build",
    "ts:fix": "npx eslint packages/xm_dkfz_net_site/Resources/Private/TypeScript --fix",
    "ts:format": "npx prettier --config .prettierrc packages/xm_dkfz_net_site/Resources/Private/TypeScript --write",
    "tsc:watch": "npx tsc --watch --noEmit",
    "svg:optimize": "svgo -f ./packages/xm_dkfz_net_site/Resources/Public/Icons -p 2 --config svgo.config.js",
    "ncu": "npx npm-check-updates --interactive --format group"
  },
  "author": "Maik Schneider",
  "license": "proprietary",
  "dependencies": {
    "autocompleter": "^8.0.3",
    "autoprefixer": "^10.4.14",
    "bootstrap": "^5.2.3",
    "cropperjs": "^1.5.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "sanitize.css": "^13.0.0",
    "sass": "^1.60.0",
    "svgo": "^3.0.2",
    "swiper": "^9.1.1",
    "tippy.js": "^6.3.7",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "npm-check-updates": "^16.9.0",
    "prettier": "2.8.8"
  }
}
