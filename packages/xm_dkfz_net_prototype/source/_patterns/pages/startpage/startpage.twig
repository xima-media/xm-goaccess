    <div class="layout">
        <div class="layout__item background--image background--image-hero background--expanded" style="
        --background-image-jpg: url('../Images/examples/hero-startpage-0.jpg');
        --background-image-jpg-md: url('../Images/examples/hero-startpage-0.jpg');
        --background-image-jpg-lg: url('../Images/examples/hero-startpage-0.jpg');
        --background-image-jpg-xl: url('../Images/examples/hero-startpage-0.jpg');
        --background-image-webp: url('../Images/examples/hero-startpage-0.webp');
        --background-image-webp-md: url('../Images/examples/hero-startpage-0.webp');
        --background-image-webp-lg: url('../Images/examples/hero-startpage-0.webp');
        --background-image-webp-xl: url('../Images/examples/hero-startpage-0.webp');

        --background-image-1-jpg: url('../Images/examples/hero-startpage-1.jpg');
        --background-image-1-jpg-md: url('../Images/examples/hero-startpage-1.jpg');
        --background-image-1-jpg-lg: url('../Images/examples/hero-startpage-1.jpg');
        --background-image-1-jpg-xl: url('../Images/examples/hero-startpage-1.jpg');
        --background-image-1-webp: url('../Images/examples/hero-startpage-1.webp');
        --background-image-1-webp-md: url('../Images/examples/hero-startpage-1.webp');
        --background-image-1-webp-lg: url('../Images/examples/hero-startpage-1.webp');
        --background-image-1-webp-xl: url('../Images/examples/hero-startpage-1.webp');

        --background-image-2-jpg: url('../Images/examples/hero-startpage-2.jpg');
        --background-image-2-jpg-md: url('../Images/examples/hero-startpage-2.jpg');
        --background-image-2-jpg-lg: url('../Images/examples/hero-startpage-2.jpg');
        --background-image-2-jpg-xl: url('../Images/examples/hero-startpage-2.jpg');
        --background-image-2-webp: url('../Images/examples/hero-startpage-2.webp');
        --background-image-2-webp-md: url('../Images/examples/hero-startpage-2.webp');
        --background-image-2-webp-lg: url('../Images/examples/hero-startpage-2.webp');
        --background-image-2-webp-xl: url('../Images/examples/hero-startpage-2.webp');
        ;">
            {% include '@components/employee-welcome-message/employee-welcome-message.twig' %}
            {% include '@components/employee-finder/employee-finder.twig' %}
        </div>
        <div class="layout__item fx--expanded">
            <div class="content-box content-box--main-hero">
                <div class="content-box__header">
                    <!-- main news: carousel -->
                    {% embed '@components/carousel/carousel.twig' with {
                        pagination: {
                            position: 'right',
                            colored: true
                        },
                        cols: {
                            xs: 1,
                            sm: 1,
                            md: 1,
                            lg: 1
                        },
                    } %}
                        {% block content %}
                            {% for item in prototype.carousel.mainNews.items %}
                                <div class="swiper-slide">
                                    <!-- cards -->
                                        {% include '@components/card/card.twig' with {
                                            title: item.title,
                                            subTitle: item.subTitle,
                                            text: item.text,
                                            type: item.type,
                                            link: {
                                                href: item.link.url,
                                                text: item.link.text
                                            },
                                            image: {
                                                src: item.image.src,
                                                position: item.image.position,
                                                patternColor: item.image.patternColor
                                            }
                                        } only %}
                                </div>
                            {% endfor %}
                        {% endblock content %}
                    {% endembed %}
                </div>

                <div class="content-box__footer">
                    <!-- more news -->
                    {% embed '@components/content-wrapper/content-wrapper.twig' with {
                        title: prototype.moreNews.title,
                        headerSize: prototype.moreNews.headerSize,
                        pattern: {
                            visible: prototype.moreNews.titleWithPattern
                        },
                        link: {
                            url: prototype.moreNews.link.url,
                            text: prototype.moreNews.link.text
                        }
                    } %}
                        {% block content %}
                            <!-- carousel -->
                            {% embed '@components/carousel/carousel.twig' with {
                                cols: {
                                    xs: 1,
                                    sm: 1,
                                    md: 2,
                                    lg: 2
                                }
                            } %}
                                {% block content %}
                                    <!-- cards -->
                                    {% for item in prototype.moreNews.items %}
                                        {% include '@components/card/card.twig' with {
                                            title: item.title,
                                            subTitle: item.subTitle,
                                            text: item.text,
                                            type: item.type,
                                            link: {
                                                href: item.link.url
                                            },
                                            image: {
                                                src: item.image.src,
                                                color: item.image.color
                                            }
                                        } only %}
                                    {% endfor %}
                                {% endblock content %}
                            {% endembed %}
                        {% endblock content %}
                    {% endembed %}

                    <!-- short messages -->
                    {% embed '@components/content-wrapper/content-wrapper.twig' with {
                        title: prototype.shortMessages.title,
                        headerSize: prototype.shortMessages.headerSize,
                        pattern: {
                            visible: prototype.shortMessages.titleWithPattern
                        },
                        link: {
                            url: prototype.shortMessages.link.url,
                            text: prototype.shortMessages.link.text
                        }
                    } %}
                        {% block content %}
                            <!-- cards -->
                            {% for item in prototype.shortMessages.items %}
                                {% include '@components/card/card.twig' with {
                                    title: item.title,
                                    subTitle: item.subTitle,
                                    type: item.type,
                                    link: {
                                        href: item.link.url
                                    },
                                } only %}
                            {% endfor %}
                        {% endblock content %}
                    {% endembed %}
                </div>
            </div>
        </div>
        <div class="layout__item fx--expanded background--cyan background--expanded">
            <!-- service -->
            {% embed '@components/content-wrapper/content-wrapper.twig' with {
                title: prototype.carousel.service.title,
                link: {
                    url: prototype.carousel.service.link.url,
                    text: prototype.carousel.service.link.text
