        <div class="layout__item">
            <div class="row">
                <div class="col-lg-6">
                    <!-- social feed: twitter -->
                    {% embed '@components/social-feed/social-feed.twig' with {
                        title: 'DKFZ auf Twitter',
                        icon: 'twitter'
                    } %}
                        {% block content %}
                            <a class="twitter-timeline" href="https://twitter.com/DKFZ?ref_src=twsrc%5Etfw">Tweets by DKFZ</a>
                            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                        {% endblock content %}
                    {% endembed %}
                </div>
                <div class="col-lg-6">
                    <!-- social feed: instagram -->
                    {% embed '@components/social-feed/social-feed.twig' with {
                        title: 'DKFZ auf Instagram',
                        icon: 'instagram'
                    } %}
                        {% block content %}
