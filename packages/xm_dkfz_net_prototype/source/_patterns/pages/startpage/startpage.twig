                            {% block content %}
                                <!-- cards -->
                                {% for item in prototype.carousel.events.items %}
                                    <div class="swiper-slide">
                                        {% include '@components/card/card.twig' with {
                                            title: item.title,
                                            subTitle: item.subTitle,
