{% extends "@layouts/default--one-column.twig" %}
{% block main %}
    {% include '@components/breadcrumb/breadcrumb.twig' %}

    {# hero #}
    {% embed '@components/hero/hero.twig' with { title: 'Betriebsärztlicher Dienst'} %}
        {% block content %}
            <button class="button button--primary icon icon--bookmark-add button--bookmark-add" data-bookmark-entity="page" data-bookmark-added="false" data-bookmark-id="2">
                Seite merken
            </button>
        {% endblock content %}
    {% endembed %}

    {% include '@components/navigation/navigation--anchor.twig' %}

<div class="layout {{ prototype.layout.class }}">


    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        class: 'frame-type-heroteaser',
    } %}
        {% block content %}
            {% include '@components/teaser/teaser.twig' with {
                asHeader: true,
                image: {
                    src: prototype.pictureHead.image.src,
                    alt: prototype.pictureHead.image.alt,
                    copyright: prototype.pictureHead.image.copyright,
                    caption: prototype.pictureHead.image.caption,
                    patternColor: prototype.pictureHead.image.patternColor,
                },
                contact: {
                    title: prototype.pictureHead.contact.title,
                    subTitle: prototype.pictureHead.contact.subTitle,
                    items: prototype.pictureHead.contact.items,
                    subTitleImage: prototype.pictureHead.contact.subTitleImage,
                    patternColor: prototype.pictureHead.image.patternColor,
                    link: {
                        url: prototype.pictureHead.contact.link.url,
                        text: prototype.pictureHead.contact.link.text
                    },
                    image: {
                        src: prototype.pictureHead.contact.image.src,
                        alt: prototype.pictureHead.contact.image.alt,
                    }
                }
            } only %}
        {% endblock content %}
    {% endembed %}

    {% embed '@components/content-wrapper/content-wrapper.twig' with {
    } %}
        {% block content %}
            {% include '@components/teaser/teaser.twig' with {
                asHeader: true,
                contact: {
                    title: prototype.pictureHead.contact.title,
                    subTitle: prototype.pictureHead.contact.subTitle,
                    items: prototype.pictureHead.contact.items,
                    subTitleImage: prototype.pictureHead.contact.subTitleImage,
                    patternColor: prototype.pictureHead.image.patternColor,
                    link: {
                        url: prototype.pictureHead.contact.link.url,
                        text: prototype.pictureHead.contact.link.text
                    },
                    image: {
                        src: prototype.pictureHead.contact.image.src,
                        alt: prototype.pictureHead.contact.image.alt,
                    }
                }
            } only %}
        {% endblock content %}
    {% endembed %}

    {% for info in prototype.infoBox %}
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title:info.segmentTitle,
            titleSize: info.titleSize,
            positionDistance: info.positionDistance,
            centered: true,
            class: 'frame-type-infobox'

        } %}
            {% block content %}
                {% include '@components/infobox/infobox.twig' with {
                    color: info.color,
                    border: info.border,
                    title: info.title,
                    text: info.text,
                    links: info.links
                } only %}
            {% endblock content %}
        {% endembed %}
    {% endfor %}

    {% for item in prototype.pictureText.items %}
        {# Bild-Text-Elemente #}
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title:item.segmentTitle,
            titleSize: item.titleSize,
            positionDistance: item.positionDistance,
            centered: true,
            class: 'frame-type-textmedia'

        } %}
            {% block content %}
                <div class="content-wrapper__picture">
                    <div class="content-wrapper__picture-position-{{ item.imagePosition|default('left') }}"
                    {% include '@components/image/image.twig' with {
                        src: item.image.src,
                        alt: item.image.alt,
                        position: item.image.position,
                        orientation: item.image.orientation,
                        size: item.image.size,
                        patternColor: item.image.patternColor,
                        copyright: item.image.copyright,
                        caption: item.image.caption
                    } only %}

                        <div class="content-wrapper__picture --content">
                            <h3 class="--title">{{ item.title }}</h3>
                            <p class="--text">
                                {{ item.text }}
                            </p>
                        </div>
                    </div>
                </div>
            {% endblock content %}
        {% endembed %}

    {% endfor %}


    {% for item in prototype.pictureSize %}
        {% embed '@components/content-wrapper/content-wrapper.twig' with {
            title:item.segmentTitle,
            titleSize: item.titleSize,
            positionDistance: item.positionDistance,
            centered: true,
            class: 'frame-type-textmedia'
        } %}
            {% block content %}
                {% include '@components/card/card.twig' with {
                    title: item.title,
                    text: item.text,
                    type: item.type,
                    image: {
                        src: item.image.src,
                        alt: item.image.alt,
                        position: item.image.position,
                        orientation: item.image.orientation,
                        size: item.image.size,
                        patternColor: item.image.patternColor,
                        copyright: item.image.copyright,
                        caption: item.image.caption
                    }
                } only %}
            {% endblock content %}
        {% endembed %}
    {% endfor %}

    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: prototype.carousel.pictureText.title,
        titleSize: prototype.pictureText.titleSize,
        positionDistance: prototype.pictureText.positionDistance,
        class: "carousel__wrapper"
    } %}
        {% block content %}
            <!-- carousel -->
            <div class="background--expanded">
                {% embed '@components/carousel/carousel.twig' with {
                    cols: {
                        xs: 1,
                        sm: 1,
                        md: 1,
                        lg: 1
                    },
                    pagination: {
                        style: {
                            xs: 'fraction',
                            sm: 'fraction',
                            md: 'fraction',
                            lg: 'fraction',
                        }
                    }
                } %}
                    {% block content %}
                        <!-- cards -->
                        {% for i in 0..6 %}
                            {% for item in prototype.carousel.pictureText.items %}
                                <div class="swiper-slide swiper-slide--height">
                                    {% include '@components/card/card.twig' with {
                                        image: {
                                            src: item.image.src,
                                            alt: item.image.alt,
                                            copyright: item.image.copyright,
                                            caption: item.image.caption
                                        }
                                    } only %}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endblock content %}
                {% endembed %}
            </div>
        {% endblock content %}
    {% endembed %}

    {#  video player #}
    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: "Video",
        titleSize: prototype.pictureText.titleSize,
        positionDistance: "left",
        class:"video-player__wrapper"
    } %}
        {% block content %}
            {% include '@components/video-player/video-player.twig' %}
        {% endblock content %}
    {% endembed %}

    {# Formatierungsmöglichkeiten #}
    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: "Formatierungsmöglichkeiten",
        titleSize: prototype.pictureText.titleSize,
        positionDistance: "left",
        class:"text"
    } %}
        {% block content %}
            {% include '@components/text/text.twig' %}
        {% endblock content %}
    {% endembed %}

    {# Tabellen #}
    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: "Tabellen",
        titleSize: prototype.pictureText.titleSize,
        positionDistance: "left",
        class: "table"
    } %}
        {% block content %}
            <div class="content-wrapper--md">
                {% include '@components/table/table.twig' %}
            </div>
        {% endblock content %}
    {% endembed %}

    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: "Leitfaden für Veranstaltungsorganisatoren",
        titleSize: prototype.pictureText.titleSize,
        class: "frame-type-accordion"

    } %}
        {% block content %}
            {# Akkordeon #}
            {% include '@components/accordion/accordion.twig' %}
        {% endblock content %}
    {% endembed %}

    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: "Tabelement",
        titleSize: prototype.pictureText.titleSize,
        positionDistance: "left",
        class: "frame-type-table"
    } %}
        {% block content %}
            {# Tabelement #}
            {% include '@components/tabs/tabs.twig' %}
        {% endblock content %}
    {% endembed %}

    {% embed '@components/content-wrapper/content-wrapper.twig' with {
        title: prototype.topics.title,
        class: 'fx--expand',
        pattern: {
            visible: prototype.topics.titleWithPattern
        }
    } %}
        {% block content %}
            <div class="content-wrapper__horizontal">
                {% for item in prototype.topics.items %}
                    {% include '@components/card/card.twig' with {
                        title: item.title,
                        subTitle: item.subTitle,
                        type: item.type,
                        link: {
                            href: item.link.url
                        },
                        image: {
                            src: item.image.src,
                            color: item.image.color,
                            size: item.image.size
                        }
                    } only %}
                {% endfor %}
            </div>
        {% endblock content %}
    {% endembed %}
</div>
{% endblock main %}


