{% extends "@layouts/default--one-column.twig" %}
{% block main %}

    {# hero form search#}
    {% include '@components/hero-form/hero-form--search.twig' %}

<div class="layout background--expanded-white {{ prototype.layout.class }}">
    <div class="layout__item">
        <div class="content-wrapper__content">
            <div class="layout__item--two {{ prototype.layout.color }}">

                <div class="filter color-accent--primary-opacity-10">
                    <h3 class="filter--title h5">Ergebnisse filtern</h3>
                    {% include '@components/field/field--checkbox.twig' %}

                    <h4 class="filter--subtitle h6">Sortieren nach</h4>
                    {% include '@components/field/field--select.twig' with {
                        label: {
                            text: 'Gremium'
                        },
                        options: [
                            {
                                text: 'Gremium'
                            },
                            {
                                value: '1',
                                text: 'Personalrat'
                            },
                            {
                                value: '2',
                                text: 'Kuratorium'
                            },
                            {
                                value: '3',
                                text: 'Wissenschaftliches Komitee'
                            },
                            {
                                value: '4',
                                text: 'Wissenschaftlicher Rat'
                            }
                        ],
                        placeholder: 'Funktion'
                    } only %}
                </div>

                {# results #}
                <div class="results results--search">
                    <h2 class="results__title h3">23 Suchergebnisse </h2>
                    <ul>
                        {% for news in prototype.results %}
                            <li class="list-view__item">
                                {% include '@components/card/card.twig' with {
                                    title: news.title,
                                    subTitle: news.subTitle,
                                    text: news.text,
                                    link: {
                                        href: news.link.url
                                    },
                                    tags: news.tag
                                } only %}
                            </li>
                        {% endfor %}

                        <li>
                            {# example text with marked word #}
                            <div class="card">
                                <div class="card__content">
                                    <div class="card__header">
                                        <h3 class="card__title">
                                            <span class="tab-item__type" style="background-color: rgb(238, 238, 238);">PDF</span>
                                            Bestellformular für <mark class="{{ prototype.layout.colorAccent }}">Caterings</mark> über das DKFZ <mark class="{{ prototype.layout.colorAccent }}">Casino</mark>
                                        </h3>
                                    </div>
                                    <div class="card__body">
                                        <div class="card__text">
                                            <p>
                                                Der Immunologe, Krebsforscher und Unternehmer Ugur Sahin baut am Helmholtz-Institut „HI-TRON Mainz“ <mark class="{{ prototype.layout.colorAccent }}">Casino</mark> eine wissenschaftliche Abteilung für mRNA-basierte
                                                Krebs-Immunthera-pie auf. Die bestechende Idee hinter dem Konzept der mRNA-basierten Krebs-Immunthera-pien: Mit Boten RNA-Molekülen (mRNA) bringt man den Körper dazu,
                                                selbst Tumorproteine zu produzieren,
                                                die das Immunsystem dazu anregen, den Krebs zu bekämpfen. Ugur Sahin ist einer der weltweit wichtigsten Pioniere auf diesem Forschungsgebiet.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>

                    {% include '@components/pagination/pagination.twig' %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock main %}
