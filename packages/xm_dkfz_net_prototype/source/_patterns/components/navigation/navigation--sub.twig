<!-- Component Start: navigation--sub -->

<div class="navigation navigation--sub">
    <ul class="navigation__items">
        <li class="navigation__item navigation__item--open-chat">
            <a class="navigation__link button button--icon-only" href="#message" aria-label="Feedback geben" data-tooltip="Feedback geben">
                {% include '@components/icon/icon.twig' with { icon: 'message' } %}
            </a>
        </li>
        <li class="navigation__item navigation__item--bookmark">
            <a class="navigation__link button button--icon-only" href="#bookmark" aria-label="Lesezeichen anzeigen" data-tooltip="Favoriten aufrufen">
                {% include '@components/icon/icon.twig' with { icon: 'bookmark' } %}
            </a>
        </li>
        <li class="navigation__item navigation__item--user">
            {% include '@components/dropdown/dropdown--user.twig' %}
        </li>
        <li class="navigation__item navigation__item--quick-search">
            {% include '@components/quick-search/quick-search.twig' %}
        </li>
        <li class="navigation__item navigation__item--menu-toggle">
            <button class="navigation__link button button--icon-only button--white fx--toggle-main-menu" type="button" aria-expanded="false" aria-controls="navigation__items--main">
                {% include '@components/icon/icon.twig' with { icon: 'menu' } %}
                {% include '@components/icon/icon.twig' with { icon: 'close' } %}
            </button>
        </li>
    </ul>
</div>

<!-- Components End: navigation--sub -->
