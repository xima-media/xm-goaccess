<!-- Component Start: infobox -->

<div class="infobox
            color-accent--{{ color|default('primary') }}
            infobox--background-{{ background|default('white') }}
            {{ border ? 'color__border' : '' }}
    ">
    <div class="infobox--wrapper">
        {% if title %}
            <h4 class="infobox__title">{{ title }}</h4>
        {% endif %}
        {% if text %}
            <p class="infobox__text">{{ text }}</p>
        {% endif %}
        {% if links %}
             <ul class="infobox__items">
                {% for link in links %}
                    <li class="infobox__item">
                        {% include '@components/icon/icon.twig' with {icon: 'arrow-right'} %}
                        <a href="{{ link.href }}" class="primary-link">{{ link.text }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        {# Mitarbeiterprofil #}
        {% if listItems %}
             <ul class="list--vertical">
                 <h5>{{ listTitle }}</h5>
                {% for link in listItems %}
                    <li>
                        <p>
                            {{ link.subtitle }} <br/>
                            <span>{{ link.text }}</span>
                        </p>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>

<!-- Components End: infobox -->
