<!-- Component Start: card -->

<div class="
    card
    card--image-{{ image.position|default('top') }}
    card--{{ size|default('md') }}
    card--image-size-{{ image.size|default('md') }} {# @todo wieder entfernen > wird über card-Klasse geregelt #}
    {{ color ? 'image-color--' ~ color : '' }} {# @todo image-color umbennen, da es wie hier auch für Cards verwendet wird #}
    {{ ratio ? 'card--ratio-' ~ ratio : '' }} {# @todo wieder entfernen > wird über card-Klasse geregelt #}
    {{ type ? 'card--' ~ type : '' }}
">
    {% if link.href and not link.text %}
        <a href="{{ link.href }}" class="card__link card__link--hidden" aria-label="{{ title }}">
            {% include '@components/icon/icon.twig' with {icon: 'arrow-right'} %}
            Mehr erfahren
        </a>
    {% endif %}
    {% if image.src or image.alt or image.color or image.patternColor or image.copyright or image.caption or image.orientation or image.size %}
        <div class="card__image">
            {% include '@components/image/image.twig' with {
                src: image.src,
                alt: image.alt,
                color: image.color,
                patternColor: image.patternColor,
                copyright: image.copyright,
                caption: image.caption,
                orientation: image.orientation,
                size: image.size
            } %}
        </div>
    {% endif %}
    {% if title or text %}
        <div class="card__content">
            {% if title %}
                <div class="card__header {{ direction ? 'card--' ~ direction : '' }}">
                    <h3 class="card__title">{{ title }}</h3>
                    {% if subTitle %}
                        <p class="card__sub-title">{{ subTitle }}</p>
                    {% endif %}
                </div>
            {% endif %}
            {% if text %}
                <div class="card__body">
                    <div class="card__text">
                        <p>{{ text }}</p>
                    </div>
                    {% if link.href and link.text %}
                        <a href="{{ link.href }}" class="card__link card__link--more">
                            {{ link.text }}
                            {% include '@components/icon/icon.twig' with {icon: 'arrow-right'} %}
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    {% endif %}
    {% if contact %}
        <ul class="card__contact">
            {% for item in contact %}
                <li class="card__item">
                    {% if item.icon %}
                        {% include '@components/icon/icon.twig' with {icon: item.icon, size: 'sm'} %}
                    {% endif %}
                    {% if item.url %}
                        <a href="{{ item.url }}">
                            {{ item.text }}
                        </a>
                    {% else %}
                        {{ item.text }}
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if tags %}
        <div class="card__footer">
            <ul class="card__tags">
                {% for tag in tags %}
                    <li class="card__tag">{{ tag }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>

<!-- Components End: card -->
