<div class="tags">
    {% if title %}
        <h3 class="h5">{{ title }}</h3>
    {% endif %}
    <ul class="list list--inline">
        {% for item in items %}
            <li class="button button--secondary">
                {# the the action on tags will be implemented later, so link is not needed now #}
                {# <a href="#" class="button button--secondary">{{ item.text }}</a> #}
                {{ item.text }}
            </li>
        {% endfor %}
    </ul>
</div>

<!-- Components End: tag -->
