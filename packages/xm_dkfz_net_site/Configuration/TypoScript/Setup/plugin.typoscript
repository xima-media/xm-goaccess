plugin.tx_luxletter_fe {
  view {
    templateRootPaths.2 = EXT:xm_dkfz_net_site/Resources/Private/Extensions/luxletter/Templates/
    partialRootPaths.1 = EXT:xm_dkfz_net_site/Resources/Private/Extensions/luxletter/Partials/
    layoutRootPaths.1 = EXT:xm_dkfz_net_site/Resources/Private/Extensions/luxletter/Layouts/
  }

  settings {
    addInlineCss {
      0 = EXT:xm_dkfz_net_site/Resources/Public/Css/Newsletter/ZurbFoundation.css
      1 = EXT:xm_dkfz_net_site/Resources/Public/Css/Newsletter/Luxletter.css
    }

    containerHtml {
      path = EXT:xm_dkfz_net_site/Resources/Private/Extensions/luxletter/Templates/Mail/
      options {
        1 {
          fileName = NewsletterContainer
        }
      }
    }
  }
}
module.tx_luxletter < plugin.tx_luxletter_fe

