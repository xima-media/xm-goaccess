<!-- Styleguide Start: color -->

<div class="styleguide styleguide--color">
    <ul class="styleguide__items">
        {% for color in colors %}
            <li class="styleguide__item">
                <div class="styleguide__header {{ color.class }}"></div>
                <div class="styleguide__body">
                    <p><strong>Name</strong> {{ color.title }}</p>
                    <p><strong>Desc</strong> {{ color.desc }}</p>
                    <p><strong>Variable</strong> {{ color.variable }}</p>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

<!-- Styleguide End: color -->
