{
	"name": "xima/xm-dkfz-net",
	"description": "Example TYPO3 project",
	"authors": [
		{
			"name": "Maik Schneider",
			"email": "maik.schneider@xima.de",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "path",
			"url": "./packages/*"
		},
		{
			"type": "vcs",
			"url": "https://github.com/Starraider/deployer-extended-typo3"
		},
		{
			"type": "vcs",
			"url": "https://github.com/maikschneider/deployer-extended-database"
		}
	],
	"require": {
		"typo3/cms-backend": "^11.5",
		"typo3/cms-belog": "^11.5",
		"typo3/cms-beuser": "^11.5",
		"typo3/cms-core": "^11.5",
		"typo3/cms-dashboard": "^11.5",
		"typo3/cms-extbase": "^11.5",
		"typo3/cms-extensionmanager": "^11.5",
		"typo3/cms-filelist": "^11.5",
		"typo3/cms-fluid": "^11.5",
		"typo3/cms-fluid-styled-content": "^11.5",
		"typo3/cms-form": "^11.5",
		"typo3/cms-frontend": "^11.5",
		"typo3/cms-impexp": "^11.5",
		"typo3/cms-info": "^11.5",
		"typo3/cms-install": "^11.5",
		"typo3/cms-lowlevel": "^11.5",
		"typo3/cms-opendocs": "^11.5",
		"typo3/cms-recordlist": "^11.5",
		"typo3/cms-recycler": "^11.5",
		"typo3/cms-redirects": "^11.5",
		"typo3/cms-reports": "^11.5",
		"typo3/cms-rte-ckeditor": "^11.5",
		"typo3/cms-scheduler": "^11.5",
		"typo3/cms-seo": "^11.5",
		"typo3/cms-setup": "^11.5",
		"typo3/cms-tstemplate": "^11.5",
		"typo3/cms-viewpage": "^11.5",
		"typo3/cms-composer-installers": "^4.0.x-dev",
		"typo3/cms-adminpanel": "^11.5",
		"helhum/dotenv-connector": "^3.0",
		"helhum/typo3-console": "^7.1",
		"xima/xm-dkfz-net-site": "*@dev",
		"xima/xm-dkfz-net-prototype": "*@dev",
		"xima/xm-dkfz-net-jobs": "*@dev",
		"blueways/deployer-recipes": "dev-feature/fb-deployment",
		"sourcebroker/deployer-extended-typo3": "dev-master as 17.0.0",
		"georgringer/news": "dev-main",
		"sourcebroker/deployer-extended-database": "dev-fix/use-php-executable as 13.0.2",
		"m4tthumphrey/php-gitlab-api": "10.4.0",
		"waldhacker/typo3-oauth2-client": "^2.0.0",
		"ext-pdo": "*",
		"xima/xm-dkfz-net-events": "*@dev",
		"typo3/cms-filemetadata": "^11.5",
		"b13/container": "^1.6.1",
		"blueways/bw-guild": "*@dev",
		"xima/xm-goaccess": "*@dev",
      "ext-dom": "*"
    },
	"require-dev": {
		"roave/security-advisories": "dev-latest",
		"friendsofphp/php-cs-fixer": "^3.6.0",
		"typo3/testing-framework": "^6.16",
		"saschaegerer/phpstan-typo3": "^1.1.2",
		"codeception/codeception": "5.0.0-RC3",
		"codeception/module-asserts": "^3.0",
		"codeception/module-webdriver": "^3.1",
		"cweagans/composer-patches": "^1.7",
		"symplify/vendor-patches": "^11.0"
	},
	"autoload-dev": {
		"psr-4": {
			"Xima\\XmDkfzNet\\Tests\\": "Tests"
		}
	},
	"extra": {
		"patches": {
			"waldhacker/typo3-oauth2-client": [
				"patches/waldhacker-typo3-oauth2-client-ext-localconf-php.patch",
				"patches/waldhacker-typo3-oauth2-client-classes-authentication-frontendauthenticationservice-php.patch",
				"patches/waldhacker-typo3-oauth2-client-classes-authentication-backendauthenticationservice-php.patch"
			],
			"m4tthumphrey/php-gitlab-api": [
				"patches/m4tthumphrey-php-gitlab-api-src-client-php.patch"
			]
		},
		"helhum/dotenv-connector": {
			"env-file": ".env",
			"adapter": "Helhum\\DotEnvConnector\\Adapter\\SymfonyDotEnv"
		}
	},
	"config": {
		"allow-plugins": {
			"helhum/dotenv-connector": true,
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true,
			"cweagans/composer-patches": true
		}
	},
	"scripts": {
		"typo3-cms-scripts": [
			"php vendor/bin/typo3cms install:fixfolderstructure",
			"mkdir -p var/goaccess"
		],
		"post-autoload-dump": [
			"@typo3-cms-scripts"
		],
		"tests": [
			"php vendor/bin/codecept run acceptance -d -c Tests/codeception.yml"
		],
		"php:fixer": "php vendor/bin/php-cs-fixer --config=php-cs-fixer.php fix",
		"php:stan": "php vendor/bin/phpstan --generate-baseline=phpstan-baseline.neon --allow-empty-baseline",
		"ci:php:lint": "find *.php . -name '*.php' ! -path './vendor/*'  ! -path './var/*' ! -path '*node_modules/*' -print0 | xargs -0 -n 1 -P 4 php -l",
		"ci:php:fixer": "php vendor/bin/php-cs-fixer --config=php-cs-fixer.php fix --dry-run -v --show-progress=dots",
		"ci:php:stan": "php vendor/bin/phpstan --no-progress"
	}
}
